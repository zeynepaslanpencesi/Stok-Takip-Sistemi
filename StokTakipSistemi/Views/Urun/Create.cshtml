@model StokTakipSistemi.Models.Urun

@{
    ViewData["Title"] = "Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                @ViewData["Title"]
                <small>Yeni Ürün</small>
            </h2>
            <ul class="header-dropdown m-r--5">
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li><a asp-action="Index" class="waves-effect waves-block">Listeye geri dön</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="body">
            <h2 class="card-inside-title">Form</h2>
            <div class="row clearfix">
                @if (ViewBag.Errors != null)
                {
                    @foreach (var item in ViewBag.Errors)
                    {
                        <p class="col-pink">@item.ErrorMessage</p>
                    }
                }
            </div>
            <div class="row clearfix">
                <form asp-action="Create" method="post">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <div class="form-line">
                                <input asp-for="Adi" class="form-control" placeholder="Adı" />
                                <span asp-validation-for="Adi" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-line">
                                <input asp-for="Fiyat" class="form-control" placeholder="Fiyat" />
                                <span asp-validation-for="Fiyat" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <select class="form-control" asp-for="MarkaId" asp-items="ViewBag.Marka">
                                    <option value="">Marka Seç</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="form-control" asp-for="UrunTurId" asp-items="ViewBag.UrunTur">
                                    <option value="">Ürün Türü Seç</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input asp-for="Adet" class="form-control" placeholder="Adet" />
                                <span asp-validation-for="Adet" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-line">
                                <input type="submit" class="btn btn-block btn-lg btn-default waves-effect" id="create" value="Oluştur">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
